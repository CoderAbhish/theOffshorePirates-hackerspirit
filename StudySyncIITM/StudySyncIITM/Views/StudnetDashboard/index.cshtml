                <button class="nav-btn login-btn">Logout</button>
            </div>
        </div>
    </nav>
    

    <!-- Main Container -->
    <div class="container">
        <section class="profile-section card">
            <h3>Your Profile</h3>
            <div class="profile-container">
                <div class="profile-image">
                    <img src="image.png" alt="Profile Picture">
                </div>
                <div class="profile-details">
                    <p><strong>Name:</strong> John Doe</p>
                    <p><strong>Program:</strong> B.Sc. Data Science</p>
                    <p><strong>CGPA:</strong> 9.2</p>
                    <p><strong>Credits Earned:</strong> 72</p>
                    <p><strong>Credits Pursuing:</strong> 24</p>
                    <p><strong>Current Term:</strong> Term 5</p>
                </div>
            </div>
        </section>
        
        

        <section class="academic-overview card">
            <h3>Academic Overview (Jan Term)</h3>
            <div class="overview-table">
                <div class="table-header">
                    <div class="table-column">Subject</div>
                    <div class="table-column">Upcoming Sessions</div>
                    <div class="table-column">Upcoming Deadlines</div>
                </div>
                <div class="table-row">
                    <div class="table-column">
                        <a href="#" class="subject-link">Mathematics 2</a>
                    </div>
                    <div class="table-column">Tuesday, 3:00 PM</div>
                    <div class="table-column">Project Report - Jan 10</div>
                </div>
                <div class="table-row">
                    <div class="table-column">
                        <a href="#" class="subject-link">Python</a>
                    </div>
                    <div class="table-column">Thursday, 5:00 PM</div>
                    <div class="table-column">Assignment 3 - Jan 15</div>
                </div>
                <div class="table-row">
                    <div class="table-column">
                        <a href="#" class="subject-link">Statistics 2 </a>
                    </div>
                    <div class="table-column">Monday, 4:00 PM</div>
                    <div class="table-column">Final Exam - Dec 22</div>
                </div>
                <div class="table-row">
                    <div class="table-column">
                        <a href="#" class="subject-link">English 2 </a>
                    </div>
                    <div class="table-column">Monday, 4:00 PM</div>
                    <div class="table-column">Final Exam - Dec 22</div>
                </div>
            </div>
        </section>
        

